@using Core.Domain;
@{
    ViewData["Title"] = "Nieuw Pakket Toevoegen";
}
<h1>@ViewData["Title"]</h1>

@model NewPackageViewModel

<div>
    <div class="text-danger" asp-validation-summary="All"></div>
    <div>
        <form asp-action="NewPackage" method="post">
            <div class="row">
                <div class="col-6 col-md-4">
                    <div class="form-group">
                        <label asp-for="Name">Naam:</label>
                        <input class="form-control" asp-for="Name" />
                    </div>
                </div>
                <div class="col-6 col-md-4">
                    <div class="form-group">
                        <label asp-for="MealType">Type maaltijd:</label>
                        <select class="form-control" asp-for="MealType" asp-items="Html.GetEnumSelectList<MealType>()">
                        </select>
                    </div>
                </div>
                <div class="col-6 col-md-4">
                    <div class="form-group">
                        <label asp-for="PickupDate">Afhaaldatum:</label>
                        <input class="form-control" asp-for="PickupDate" />
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-6 col-md-4">
                    <div class="form-group">
                        <label asp-for="Price">Prijs:</label>
                        <input class="form-control" asp-for="Price" />
                    </div>
                </div>
                <div class="col-6 col-md-4">
                    <div class="form-group">
                        <label asp-for="CityEnum">Stad:</label>
                        <select class="form-control" asp-for="CityEnum" asp-items="Html.GetEnumSelectList<CityEnum>()">
                        </select>
                    </div>
                </div>
                <div class="col-6 col-md-4">
                    <div class="form-group">
                        <label asp-for="EndOfPickupTime">Einde van afhaaltijd:</label>
                        <input class="form-control" asp-for="EndOfPickupTime" />
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-12 col-md-8">
                    <label>Producten:</label>
                    @if (Model.ProductsAsCheckboxViewModel != null) {
                        <div class="row">
                            @foreach (var checkbox in Model.ProductsAsCheckboxViewModel) {
                                <div class="col-6 col-md-4">
                                    <div class="form-check">
                                        <input class="form-check-input"
                                       type="checkbox"
                                       value="@checkbox.Product.Id"
                                       name="SelectedProductsIds"
                                       id="@checkbox.Product.Id"
                                       checked="@checkbox.IsChecked" />
                                        <label class="form-check-label" for="@checkbox.Product.Id">@checkbox.Product.Name</label>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                </div>
            </div>
            <div class="form-group row">
                <p> <button class="btn btn-primary move20Down">Pakket toevoegen</button></p>
            </div>
        </form>
    </div>
</div>
