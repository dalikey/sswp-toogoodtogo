@model LoginModel
@{
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
    ViewData["Title"] = "Inloggen";
}

<div class="h1Aligner">
    <h1>@ViewData["Title"]</h1>
    <div class="card w-95">
        <div class="card-body">
            <div asp-validation-summary="ModelOnly"></div>

            <form asp-action="Login" asp-controller="Account" method="post">
                <div class="form-group">
                    <label asp-for="Name">Naam</label>
                    <input asp-for="Name" class="form-control inputWidth400" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Password">Wachtwoord</label>
                    <input asp-for="Password" class="form-control inputWidth400" />
                    <div><span asp-validation-for="Password" class="text-danger"></span></div>
                </div>
                <button class="btn btn-primary move20Down loginButtonWidth" type="submit">Log in</button>
                <div class="form-group move20Down">
                    <label>Nieuw bij Avans?  <a asp-controller="Account" asp-action="Register">Maak een account aan.</a></label>
                </div>
            </form>
        </div>
    </div>
</div>